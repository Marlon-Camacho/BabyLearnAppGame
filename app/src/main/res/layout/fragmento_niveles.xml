<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_juego"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="400dp"
            app:pageColor="@color/colorAccent"
            app:slideInterval="300"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            app:autoPlay="true"
            app:radius="6dp"
            android:layout_margin="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_crear_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="crearEntidadPrueba"
            android:background="#111119"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:text="Nivel 1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_consultar_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="consultarEntidadPrueba"
            android:background="#111119"
            android:textColor="#FFFFFF"
            android:layout_margin="2dp"
            android:text="Nivel 2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_consultar_lista_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111119"
            android:textColor="#FFFFFF"
            android:text="Nivel 3"
            android:layout_margin="2dp"/>
    </LinearLayout>
</ScrollView>