<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        style="@style/componente.cardview"
        app:contentPadding="5dp"
        android:id="@+id/card_menu_principal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_enumerador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|end"
                android:translationZ="1dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_enumerador_menu"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/circle_border"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="10"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imv_menu_principal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fitsSystemWindows="true"
                android:scaleType="center"
                android:contentDescription="Esta tarheta permite entrar a una modalidad de juego" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/imv_menu_principal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_titulo_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_menu_titulo_sample"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>